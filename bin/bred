#!/usr/bin/env bash

while true; do
  echo 0 > /tmp/bred-$$-relaunch
  export BRED_SCRIPT_PID=$$
  if [ -n "$BRED_GDB" ] && [ "$BRED_GDB" -eq 1 ]; then
    npm run start-gdb -- $*
  else
    npm start -- $*
  fi
  CODE=$?
  echo "exit code: $CODE"
  echo /tmp/bred-$$-relaunch:
  cat /tmp/bred-$$-relaunch
  if [ "$(cat /tmp/bred-$$-relaunch)" = "1" ]; then
    echo Relaunching...
    continue
  fi
  break
done
rm -f /tmp/bred-$$-relaunch
