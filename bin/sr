#!/bin/bash

DEPTH=""
if [ "$2" -eq "0" ]; then
  DEPTH="-maxdepth 1"
fi
FIXED="--ignore-case --fixed-strings"
if [ "$3" -eq "1" ]; then
  FIXED=""
fi
find . -type f -not -name \*.BAK -not -name \*.CKP -not -name \*~ $DEPTH 2>/dev/null | sort | uniq | xargs grep $FIXED --line-number -H -I -- "$1" 2>/dev/null # -I -e -H 2>/dev/null
